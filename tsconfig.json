{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./client/dist/",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noLib": false
    },
    "include": [
        "./client/src/**/*",
        "./data**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "useTranspileModule": true,
        "doTypeCheck": true,
        "forkChecker": true
    }
}